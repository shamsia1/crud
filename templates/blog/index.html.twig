{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
	<section class="article">
	
	{% for article in articles %}
	<article>
		<h2>{{ article.title }}</h2>
		<div class="metadata">
			Ecrit le {{ article.createdAt | date('d/m/y')}} a {{ article.createdAt | date('H:i')}} dans le categorie politique
		</div>
		<div class="content">
			<img src="{{ article.image }}">

			{{ article.content | raw }}

			<a href="{{ path('blog_show', {'id': article.id})}}" class="btn btn-primary">Lire la suit</a>
		</div>
	</article>

	{% endfor %}
	
	</section>

{% endblock %}
